{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".", // ★ ソースのルートディレクトリを指定
    "module": "CommonJS",
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  // ★ prismaディレクトリ以下のすべての.tsファイルを対象にする
  "include": [
    "**/*.ts"
  ]
}