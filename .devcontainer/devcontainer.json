@{
  "name": "Next.js & PostgreSQL Dev Container",
  "dockerComposeFile": "docker-compose.yml",

  // docker-compose.ymlで定義したサービスのうち、VS Codeが接続するサービス
  "service": "app",

  // VS Codeで開くコンテナ内の作業ディレクトリ
  "workspaceFolder": "/workspaces/my-next-app/src",

  // コンテナ内でVS Codeを実行するユーザー
  "remoteUser": "node",

  
  // コンテナ内のユーザーのUID/GIDをホストに合わせ、パーミッションの問題を解決する
  "updateRemoteUserUID": true,
  // ★★★ 修正点 1 ★★★
  // npm installの前に、node_modulesの所有権をnodeユーザーに変更する
  "postCreateCommand": "sudo chown -R node:node /workspaces/my-next-app/src/node_modules && npm install",

  // ★★★ 修正点 2 ★★★
  // コンテナ起動のたびに実行するコマンド (開発サーバーとPrisma Studioを起動)
  "postStartCommand": "npm run dev & npx prisma studio --browser none &",

  // "postStartCommand": "npm run dev & npx prisma studio --browser none &",

  // VS Codeのカスタマイズ
  "customizations": {
    "vscode": {
      // コンテナ内で有効化する推奨拡張機能
      "extensions": [
        "ms-azuretools.vscode-docker",
        "Prisma.prisma",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "google.geminicodeassist",
        "google.gemini-cli-vscode-ide-companion"
      ]
    }
  },

  // ポートフォワーディングの設定
  "forwardPorts": [3000, 5432, 5556]
}